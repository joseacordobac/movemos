---
 import Head from '../components/molecules/Head/Head.astro';
 import Header from '../components/organism/Header/Header.astro'
 import Footer from '../components/organism/Footer/Footer.astro'
 import { slide, fade } from "astro:transitions";
 import '../global/style.css' 

 const path = Astro.url.pathname
const {headerType} = Astro.props
---

<!doctype html>
<html lang="es" transition:name="root" transition:animate="none">
    <head>
        <Head/>
    </head>
    <body>
        <Header headerType={headerType}/>
        <main class={`main ${path === '/' ? 'home' : ''}` } transition:animate={slide({ duration: "0.9s" })}>
            <slot />
        </main>
        <Footer/>
    </body>
</html>


<style is:global >
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>